{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "GamesDb": "Data Source=localhost; Initial Catalog=GamesStore; Trusted_Connection=true; TrustServerCertificate=true",
    "GameStoreContextConnection": "Data Source=GameStore.db"
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "Authority": "https://YOUR_AUTHORITY_DOMAIN",
        "ValidAudiences": [
          "YOUR_AUDIENCE"
        ],
        "ValidIssuer": "YOUR_AUTH0_DOMAIN"
      }
    }
  }
}