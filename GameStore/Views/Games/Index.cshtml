@model GamesViewModel
@{
    ViewData["Title"] = "Games";
}

<h1>Games</h1>

<div class="container row">
    <div class="col-3">
        <form method="get">
            <div class="form-floating ">
                <select id="genreFilter" class="form-select">
                    <option>Hola</option>
                </select>
                <label for="genreFilter">Game Genre</label>
            </div>
        </form>
    </div>

    <div class="col">
        <ul class="list-group">
            @foreach (var game in Model.Games)
            {
                <li class="list-group-item">
                    <partial name="_ProductSummary" model="game"/>
                </li>
            }
        </ul>
    </div>
</div>