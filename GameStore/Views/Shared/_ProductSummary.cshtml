@model Game

<div class="">
    <div class="bg-gradient p-1">
        <h4>
            @Model.Name
            <span class="badge round-pill bg-primary text-white" style="float:right">
                <small>@Model.Price.ToString("C")</small>
            </span>

        </h4>
    </div>
    <form method="post" asp-controller="Cart" asp-action="AddGame">
        <input type="hidden" asp-for="@Model.Id"/>
        <span class="card-text p-1">
            <button type="submit"
                    class="btn btn-success btn-sm" style="float:right">Add to Cart</button>
        </span>
    </form>
</div>