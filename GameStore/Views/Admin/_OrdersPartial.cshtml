@model PageInfo

<ul class="pagination">
    <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
        <a asp-controller="Admin" asp-action="Orders" asp-route-pageNumber="@(Model.CurrentPage - 1)" class="page-link"
            aria-label="previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @for (var i = Model.CurrentPage - 2; i <= Model.CurrentPage + 2; i++)
    {
        if (i > 0 && i <= Model.TotalPages)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                <a asp-controller="Admin" asp-action="Orders" asp-route-pageNumber="@i" class="page-link">
                    @i
                </a>
            </li>
        }
    }
    <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
        <a asp-controller="Admin" asp-action="Orders" asp-route-pageNumber="@(Model.CurrentPage + 1)" class="page-link" aria-label="next">
            <span class="sr-only">Next</span>
            <span aria-hidden="true">&raquo;</span>
        </a>
    </li>
</ul>